<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/Background"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileLogo"
                android:layout_width="81dp"
                android:layout_height="35dp"
                android:layout_marginTop="36dp"
                android:gravity="left"
                app:srcCompat="@drawable/ic_account_circle_white_24dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="My Reminders"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="469dp"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/temp_list_data" />
            <!--android:entries="@array/Inputs"-->


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addBtn"
            android:layout_width="93dp"
            android:layout_height="89dp"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_add_circle_white_24dp"
            android:backgroundTint="@color/Button" />

        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/Button"
            android:layout_gravity="center"
            android:text="LOG OUT"
            android:textSize="16sp" />


    </LinearLayout>
</layout>